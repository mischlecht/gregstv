          a(href= "/about")
            li.inline.menuitem About
          a(href= "/monthlyad")
            li.inline.menuitem Our Ad
          a(href="/rental")
            li.inline.menuitem Rental
          a(href="/askus")
            li.inline.menuitem Ask
          a(href= "https://rewards.truevalue.com/" target="_blank")
