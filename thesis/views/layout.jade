        ul.inline.footerlist#storelinks
          li
            a(href="https://www.facebook.com/GregsTrueValue" target="_blank")
              img(src='/images/FacebookIcon.gif').logolink
          li
            a(href="https://twitter.com/GregsTrueValue" target="_blank")
              img(src='/images/TwitterIcon.gif').logolink


