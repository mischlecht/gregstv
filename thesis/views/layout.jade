    #content.centered
      block content

   
    #gregimage
      img(src='/images/gregexpert.jpg')#gregexpert.centered

    #footer
      #footerinfo.centered
        a(href="https://maps.google.com/maps?q=3050+East+Layton+Avenue+St.+Francis,+WI+53235+(414)+483-5550&ie=UTF-8&ei=L50gU4XhGqewyQGVkYHoCQ&ved=0CAkQ_AUoAQ" target="_blank")#gregsgooglemaps
